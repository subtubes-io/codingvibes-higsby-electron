{
    "name": "ChatGPT Configuration Extension",
    "version": "1.0.0",
    "componentName": "ChatGPTExtension",
    "description": "A comprehensive ChatGPT configuration and API extension with form controls and environment-based API integration",
    "author": "CodingVibes",
    "main": "index.js",
    "permissions": [
        "network",
        "environment"
    ],
    "keywords": [
        "chatgpt",
        "openai",
        "ai",
        "configuration",
        "api",
        "typescript",
        "react"
    ],
    "category": "ai",
    "language": "typescript",
    "framework": "react",
    "minAppVersion": "1.0.0",
    "dimensions": {
        "width": 400,
        "height": 300
    },
    "ports": {
        "inputs": [
            {
                "name": "systemPrompt",
                "category": "string",
                "description": "System message to set AI behavior and context",
                "required": false
            },
            {
                "name": "userPrompt",
                "category": "string",
                "description": "User question or request for the AI",
                "required": true
            },
            {
                "name": "model",
                "category": "string",
                "description": "OpenAI model to use (e.g., gpt-4o, gpt-3.5-turbo)",
                "required": false
            },
            {
                "name": "temperature",
                "category": "number",
                "description": "Response creativity level (0.0-2.0)",
                "required": false
            },
            {
                "name": "maxTokens",
                "category": "number",
                "description": "Maximum response length in tokens",
                "required": false
            }
        ],
        "outputs": [
            {
                "name": "response",
                "category": "string",
                "description": "Generated ChatGPT response text",
                "required": false
            }
        ]
    }
}